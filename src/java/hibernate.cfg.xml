<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>    
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/doctor_db?zeroDateTimeBehavior=convertToNull</property>    
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <!--<property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>-->
    <property name="hibernate.c3p0.min_size">10</property>
    <property name="hibernate.c3p0.max_size">100</property>
    <property name="hibernate.c3p0.timeout">36000</property>
    <property name="hibernate.dbcp.max Wait">-1</property>
    <property name="hibernate.c3p0.max_statements">50</property>
    <property name="hibernate.c3p0.acquire_increment">5</property>
    <property name="hibernate.c3p0.idle_test_period">32000</property> 
    <property name="current_session_context_class">thread</property>
    <property name="connection.useUnicode">true</property>
    <property name="connection.autoReconnect">true</property>
    <property name="connection.autoReconnectForPools">true</property>
    <property name="connection.is-connection-validation-required">true</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="use_sql_comments">true</property>
    <property name="hibernate.jdbc.batch_size">100</property>
    <property name="connection.characterEncoding">UTF8</property>
    
    
    <!--table mappings start-->

    <mapping resource="com/so/hbm/SoUserRegistration.hbm.xml"/>
    <mapping resource="com/so/hbm/patient/SoPatientMaster.hbm.xml"/>
    <mapping resource="com/so/hbm/RegPass.hbm.xml"/>
    <mapping resource="com/so/hbm/admin/SoState.hbm.xml"/>
    <mapping resource="com/so/hbm/admin/SoCity.hbm.xml"/>
    <mapping resource="com/so/hbm/doctor/SoAddressMaster.hbm.xml"/>
    <mapping resource="com/so/hbm/doctor/SoContactMaster.hbm.xml"/>
    <mapping resource="com/so/hbm/doctor/SoDoctorSpecialization.hbm.xml"/>
    <mapping resource="com/so/hbm/admin/SoSpecializationMaster.hbm.xml"/>
    <mapping resource="com/so/hbm/enquiry/SoInquiry.hbm.xml"/>
    <mapping resource="com/so/hbm/admin/SoHospitalMaster.hbm.xml"/>
    <mapping resource="com/so/hbm/doctor/SoDoctorHospitalAssociation.hbm.xml"/>
    <mapping resource="com/so/hbm/doctor/SoDoctorFieldsConfig.hbm.xml"/>
    
  </session-factory>
</hibernate-configuration>
